{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for MCP-RG-Editor Tauri",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": []
    },
    "fs:default",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-data-read",
    "fs:allow-app-data-write",
    "process:default",
    "http:default",
    "http:allow-fetch",
    "dialog:default",
    "notification:default",
    "log:default"
  ],
  "globalScope": {
    "fs": {
       "allow": []
    },
    "shell": {
      "execute": {
        "allow": []
      }
    }
  }
}